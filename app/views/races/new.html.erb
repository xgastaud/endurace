<div class="banner-new" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://acm-sport.com/wp-content/uploads/2017/05/picture1-ok-.jpg');">
  <div class="new-form-container">
    <h2>Create your race</h2>
    <br>
    <%= simple_form_for(@product) do |f| %>
      <div class="form-inputs">
        <%= f.input :title, required: true%>
        <%= f.input :category, collection: Product::CATEGORY_COLORS.keys, required: true %>
        <%= f.input :price_per_day, required: true %>
        <%= f.input :address, input_html: { class: "autocomplete", required: true } %>
        <%= f.input :description, required: true %>
        <%= f.input :photo%>
        <%= f.input :photo_cache, as: :hidden%>
        <br>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Post your ad", class: "btn btn-primary full-width" %>
      </div>

    <% end %>
  </div>
</div>
