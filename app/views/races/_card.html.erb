<div class="card">
  <%= link_to "", race_path(race), class: "card-link"%>
  <div class="card-picture" style="background-image: linear-gradient(360deg, rgba(0,0,0,0.7), rgba(0,0,0,0)), url(<%= race.image_race.nil? ? race.photo : race.image_race %>);">
    <div class="card-format">

      <span><%= race.available_slots %></span>
    </div>
    <div class="card-bottom">
      <div class="card-name">
        <strong><%= race.name %></strong>
        <span class="card-location"><%= race.starts_at.strftime("%b %d") %> â€¢ <%= race.address %></span>
      </div>
      <%# if user_signed_in? %>
      <%# end %>
        <div class="card-wishlist">
          <%= form_for race, url: race_like_path(race), method: :post do |f| %>
            <%= button_tag type: "submit", class: "like-button-form" do %>
              <i class="<%= current_user && current_user.voted_for?(race) ? "fas" : "far" %> fa-heart"></i>
            <% end %>
          <% end %>
          <%# link_to race_like_path(race) do %>
          <%# end %>
        </div>
    </div>
  </div>
  <div class="card-description">
    <div class="card-friends" >
      <% race.get_likes.map {|like| like.voter }.each do |user| %>
        <% if user.facebook_picture_url %>
          <%= image_tag user.facebook_picture_url, class: "card-avatar" %>
        <% else %>
          <%= image_tag "runner.jpg", class: "card-avatar" %>
        <% end %>
      <% end %>
     <p class="card-avatar-text"> <%= pluralize(race.get_likes.map.count,"friend") %> </p>
    </div>
    <div class="card-price"> <%= race.format %> </div>
  </div>
</div>
