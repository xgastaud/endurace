<div class="banner-show" style="background-image: url('http://res.cloudinary.com/dpthh89hv/image/upload/v1521554873/endurace/banner_bike.jpg');">
  <div class="banner-show-title-box">
    <h1>
      <%= @race.name %>
    </h1>
    <h2>
      <%= @race.sport %>
    </h2>
  </div>
</div>
<div class="container">
<%= link_to "Back", href="javascript:history.back()" %>
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <div class="description">
        <h2>
          Description
        </h2>
        <p>
          <%= @race.description %>
        </p>
      </div>
      <div class="metrics">
        <h2>
          Metrics
        </h2>
          <div class="metrics-container">
            <div class="metrics-logo-container">
              <%= image_tag('swim-logo.png', class: "avatar-show") %>
              <p><%= @race.distance_swim %></p>
            </div>
            <div class="metrics-logo-container">
              <%= image_tag('bike-logo.png', class: "avatar-show") %>
              <p><%= @race.distance_bike %></p>
            </div>
            <div class="metrics-logo-container">
              <%= image_tag('run-logo.png', class: "avatar-show") %>
              <p><%= @race.distance_run %></p>
            </div>
          </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6">
      <div class="map">
        <h2>
          Location
        </h2>
        <%= image_tag "https://maps.googleapis.com/maps/api/staticmap?zoom=10&size=800x200&sensor=false&maptype=roadmap&markers=color:red|#{@race.address}&key=#{ENV['GOOGLE_API_BROWSER_KEY']}" %>
      </div>
    </div>
  </div>
</div>
