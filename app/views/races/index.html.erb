<div class="container-fluid">
  <div class="searchbar">
    <%= form_tag(races_path, method: :get) do %>
    <%= text_field_tag :pg_search_documents , nil, class: "drop", placeholder: "Search" %>
    <% end %>
  </div>
  <div class="index-container">

    <div class="left-container">
      <div class="card-container">
        <button class="plusdefiltre btn-default dropdown-toggle" role="button" data-toggle="collapse" href="#collapseExample" aria-expanded="true" aria-controls="collapseExample">
          Plus de filtres
        </button>
        <div class="collapse" id="collapseExample">
          <div class="well">
            <div class="filters">
              <%= form_tag(races_path, method: :get) do %>
              <div class="form-inputs">
                <h5>
                  <%= select_tag :format, options_for_select(Race::FORMATS_SPORTS.values.flatten), {prompt: @format.present? ? @format : "Sport", class: 'drop'}%>
                  <%= select_tag :range, options_for_select([["50km", "50"], ["200km", "200"], ["1000km", "1000"]]), {class: 'drop'}%> de <%= text_field_tag :address, @address, class: "drop", placeholder: @address %>
                </h5>
              </div>
              <div class="form-inputs">
                <h5>entre le <%= text_field_tag :from, @from, id: "range_start", class: "datepicker drop" %> et le <%= text_field_tag :to, @to, id: "range_end", class: "datepicker drop" %></h5>
              </div>
              <div class="slider-distance">
                Participants <b>10</b>
                <input id="ex2" type="text" class="span2" name="distance" value="" data-slider-min="10" data-slider-max="40000" data-slider-step="5" data-slider-value="[1,40000]"/>
                 <b>40000</b>
              </div>
              <div class="form-inputs">
                <%= submit_tag "Appliquer les filtres", name: nil, class: 'plusdefiltre' %>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div>
        <p>
          <%= ( @races.length > 1 || @races.length == 0 ) ? "#{@races.length} résultats" : "#{@races.length} résultats" %>
        </p>
      </div>
      <div class="races">
        <%= render "races", races: @races %>
      </div>
      <hr />
   </div>
   <div id="map" class="hidden-sm" data-markers="<%= @markers.to_json %>" data-icon-path="<%= asset_path 'flag.png' %>"></div>
  </div>
  <div class="pages">
    <!-- rajoute condition if params de page/ -->
    <%#= paginate @races if params[:page], remote: true %>
    <%#= page_entries_info @races if params[:page] %>
  </div>
  </div>
</div>
