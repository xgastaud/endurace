
<div class="homepage-hero-module">
  <div class="video-container">
    <div class="filter"></div>
    <video autoplay loop class="fillWidth">
        <source src='<%= video_path "Keep_Running.mp4"%>' type="video/mp4" />Your browser does not support the video tag. I suggest you upgrade your browser.
        <source src='<%= video_path "Keep_Running.webm"%>' type="video/webm" />Your browser does not support the video tag. I suggest you upgrade your browser.
    </video>
    <div class="poster hidden">
        <img src='<%= video_path "Keep_Running.jpg"%>' alt="">
    </div>
  </div>
</div>
<div class="banner-absolute-container">
  <div class="banner">
    <div class="banner-content">
      <h1>Endurace</h1>
      <h2>Trouve ta prochaine épreuve</h2>

      <%= form_tag(races_path, method: :get) do %>
        <div class="form-inputs">
          <h3>
            Je cherche un <%= select_tag :sport, options_for_select(Race::FORMATS_SPORTS.keys), {:prompt => 'Sport', :class => 'drop'}%> type <%= select_tag :format, options_for_select(Race::FORMATS_SPORTS.values), {:prompt => 'Format', :class => 'drop'}%>
          </h3>
          <h3>
            à moins de <%= select_tag :range, options_for_select([["20km", "20"], ["50km", "50"], ["500km", "500"]]), {:prompt => '500km', :class => 'drop'}%> de <%= text_field_tag :address, '', class: "drop", placeholder: "Ville" %>
          </h3>
        </div>
        <div class="form-inputs">
          <h3>entre le <%= text_field_tag :from, Date.today, id: "range_start", class: "datepicker drop" %> et le <%= text_field_tag :to, Date.today + 9.months, id: "range_end", class: "datepicker drop" %></h3>
        </div>
        <div class="form-inputs">
          <%= submit_tag "Go", name: nil, class: 'btn-go' %>
        </div>
      <% end %>
      <!-- <div class="index-searchbar">
        <%= link_to "See all adds", races_path %>
      </div> -->
    </div>
  </div>
</div>
