<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://acm-sport.com/wp-content/uploads/2017/05/picture1-ok-.jpg');">
  <div class="banner-content">
    <h1>Endurace</h1>
    <h2>Trouve ta prochaine course</h2>

    <%= form_tag(races_path, method: :get) do %>
      <div class="form-inputs">
        <%= text_field_tag :from, Date.today, id: "range_start", class: "datepicker" %>
        <%= text_field_tag :to, Date.today + 2.months, id: "range_end", class: "datepicker" %>
      </div>
      <div class="form-inputs">
        <h2>Je cherche une épreuve de <%= select_tag :sport, options_for_select(Race::FORMATS_SPORTS.keys), {:prompt => 'Sport recherché', :class => 'drop'}%></h1>
        <h2> format <%= select_tag :format, options_for_select([["Triathlon Court", "Triathlon Courte Distance"], ["Triathlon Long", "Triathlon Longue Distance"], ["Triathlon Kids", "Triathlon Kids"], ["5km", "5km"], ["10km", "10km"], ["20km", "20km"], ["50km", "50km"], ["100km", "100km"]]), {:prompt => 'Format de la course', :class => 'drop'}%></h2>
      </div>
      <div class="form-inputs">
        <h3>à moins de <%= select_tag :range, options_for_select([["20km", "20"], ["50km", "50"], ["500km", "500"]]), {:prompt => '500km', :class => 'drop'}%> de <%= text_field_tag :address %></h3>
      </div>
      <div class="form-inputs">
        <h2>
          <%= submit_tag "Go", name: nil, class: 'btn' %>
        </h2>
      </div>

    <% end %>

    <div class="index-searchbar">
      <%= link_to "See all adds", races_path %>
    </div>

  </div>
</div>
